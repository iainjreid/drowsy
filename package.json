{
  "name": "drowsy-monorepo",
  "scripts": {
    "install": "lerna link",
    "lint": "eslint .",
    "prepare": "lerna run prepare",
    "test": "jest"
  },
  "devDependencies": {
    "@emphori/eslint-config": "^0.1.7",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "@types/oboe": "^2.0.28",
    "axios": "^0.19.0",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "eslintConfig": {
    "extends": "@emphori"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./packages/drowsy/lib/drowsy.js",
      "./packages/drowsy-*/src/main/**/*.js"
    ],
    "moduleNameMapper": {
      "^drowsy/([a-z]+)$": "<rootDir>/packages/drowsy/$1",
      "^@chaffity/drowsy-([a-z]+)$": "<rootDir>/packages/drowsy-$1/"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    }
  },
  "license": "MIT",
  "private": true
}
