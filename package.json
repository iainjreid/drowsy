{
  "scripts": {
    "prettier": "prettier --write *.{json,md} lib/*",
    "install": "lerna link",
    "prepare": "lerna run prepare",
    "test": "jest"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "prettier": "^1.17.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/main/**/*.{js,ts}"
    ],
    "moduleNameMapper": {
      "^@chaff/fui/([a-z]+)$": "<rootDir>/packages/fui/$1",
      "^@chaff/fui-([a-z]+)$": "<rootDir>/packages/fui-$1/"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "always"
  },
  "license": "MIT",
  "private": true
}
