{
  "name": "drowsy-monorepo",
  "scripts": {
    "prettier": "prettier --write *.{json,md} lib/*",
    "install": "lerna link",
    "prepare": "lerna run prepare",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.7",
    "axios": "^0.19.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./packages/drowsy/lib/drowsy.js",
      "./packages/drowsy-*/src/main/**/*.js"
    ],
    "moduleNameMapper": {
      "^drowsy/([a-z]+)$": "<rootDir>/packages/drowsy/$1",
      "^@chaff/drowsy-([a-z]+)$": "<rootDir>/packages/drowsy-$1/"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "always"
  },
  "license": "MIT",
  "private": true
}
